{%CLASSGROUP 'Vcl.Controls.TControl'}


uses Ufrm_Principal, Ufrm_Login, IniFiles, Vcl.Forms, Vcl.Dialogs;

{$R *.dfm}

procedure TDM_Dados.CDS_ClientesAfterScroll(DataSet: TDataSet);
begin
  CDS_EndCli.Close;
  CDS_EndCli.ParamByName('idcliente').AsInteger := CDS_Clientesidcliente.AsInteger;
  CDS_EndCli.Open;

  CDS_Telefone.Close;
  CDS_Telefone.ParamByName('idcliente').AsInteger := CDS_Clientesidcliente.AsInteger;
  CDS_Telefone.Open;

end;

procedure TDM_Dados.SQLConnection1BeforeConnect(Sender: TObject);
var
  Ini: TIniFile;
begin
    Ini := TIniFile.Create(ExtractFilePath(Application.ExeName) + 'C:\Case\Setup.ini');
    try
        SQLConnection.Connected     := false;
        SQLConnection.LoginPrompt   := false;
        SQLConnection.DriverName    := Ini.ReadString('Local', 'Drivername', '');
        SQLConnection.GetDriverFunc := Ini.ReadString('Local', 'GetDriveFunc', '');
        SQLConnection.LibraryName   := Ini.ReadString('Local', 'LibraryName', '');
        SQLConnection.VendorLib     := Ini.ReadString('Local', 'VendorLib', '');
        SQLConnection.Params.Clear;
        SQLConnection.ParamsLoaded  := True;
        SQLConnection.Params.Add('servercharset='+ Ini.ReadString('Local', 'Charset', ''));
        SQLConnection.Params.Add('hostname='+      Ini.ReadString('Local', 'Hostname', ''));
        SQLConnection.Params.Add('user_name='+     Ini.ReadString('Local', 'User_name', ''));
        SQLConnection.Params.Add('password='+      Ini.ReadString('Local', 'Password', ''));
        SQLConnection.Params.Add('port='+          IntToStr(Ini.ReadInteger('Local', 'Port', 0)));
        SQLConnection.Params.Add('Database='+      Ini.ReadString('Local', 'Database', ''));
    except
         on E:Exception do
         MessageDlg('Erro ao conectar!'#13'Erro: ' + e.Message, mtError, [mbOK], 0);
    end;
end;

end.
